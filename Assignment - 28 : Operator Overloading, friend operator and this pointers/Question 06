class complex
{
    private:
        int real , imag ;
    public:
        void setData(int r , int i)
        {
            real = r ;
            imag = i ;
        }
        void display()
        {
            cout << real << " + " << imag << "i" << endl ;
        }
        complex & operator=(const complex &c1)
        {
            this-> real = c1.real ;
            this-> imag = c1.imag ;
            return *this ;
        }
};
