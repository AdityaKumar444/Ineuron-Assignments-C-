#include<iostream>
using namespace std ;
class Item ;
class Product
{
    private:
        int x , y ;
    public:
        void setData(int a , int b)
        {
            x = a ;
            y = b ;
        }
        int getX()
        {
            return x ;
        }
        int getY()
        {
            return y ;
        }
};
class Item
{
    private:
        int x , y ;
    public:
        Item (){}
        Item (int a , int b)
        {
            x = a ;
            y = b ;
        }
        Item (Product p)
        {
            x = p.getX() ;
            y = p.getY() ;
        }
        void display ()
        {
            cout << "x = " << x << endl ;
            cout << "y = " << y << endl ;
        }
}; 
int main () 
{
    Item i1 ;
    Product p1 ;
    p1.setData(3,4) ;
    i1 = (Item)p1 ;
    i1.display();
    return 0 ; 
}
