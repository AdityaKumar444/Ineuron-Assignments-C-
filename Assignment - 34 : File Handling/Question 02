#include<iostream>
#include<string>
#include<fstream>
using namespace std ; 
int main () 
{
    int l1 = 0 , len = 0 ;
    ifstream fin ;
    string str ;
    fin.open("D:/New folder/file.txt");
    while (!fin.eof())
    {
        getline(fin,str);
        l1 = str.length();
        len = len + l1 ;
    }
    cout << len ;
    fin.close();
    return 0 ; 
}
